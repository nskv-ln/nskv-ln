HTML 
<!doctype html>
<html lang="ru">
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Mini Shop — QA Light</title>
<style>
  body{font-family:system-ui,Segoe UI,Roboto,Arial;margin:24px;color:#222}
  .wrap{max-width:900px;margin:0 auto}
  h1{margin:0 0 8px}
  .grid{display:grid;grid-template-columns:1fr 1fr;gap:12px}
  .card{border:1px solid #eee;border-radius:10px;padding:12px}
  table{width:100%;border-collapse:collapse}
  th,td{border-bottom:1px solid #f0f0f0;padding:8px;text-align:left}
  button{padding:8px 12px;border-radius:8px;border:1px solid #ddd;background:#f4f4f4;cursor:pointer}
  button:hover{background:#eee}
  .muted{color:#666;font-size:12px}
  .totals{border-top:1px dashed #eee;margin-top:8px;padding-top:8px}
  form{display:grid;grid-template-columns:1fr 1fr;gap:12px;align-items:end}
  form label{display:block}
  #orderForm button{grid-column:1/-1}
  @media (max-width:800px){.grid{grid-template-columns:1fr}form{grid-template-columns:1fr}}
</style>

<body>
  <div class="wrap">
    <h1>Mini Shop — QA Light</h1>
    <p class="muted">Демо без бэкенда. Проверь корзину, промокод и оформление заказа.</p>

    <h2>Каталог</h2>
    <div id="catalog" class="grid">
      <div class="card product" data-id="1" data-price="1299">
        <strong>Фитнес-браслет</strong><br>1 299 ₽<br>
        <button class="add">В корзину</button>
      </div>
      <div class="card product" data-id="2" data-price="2499">
        <strong>Беспроводные наушники</strong><br>2 499 ₽<br>
        <button class="add">В корзину</button>
      </div>
    </div>

    <h2>Корзина</h2>
    <table id="cart">
      <thead>
        <tr>
          <th>Товар</th><th>Цена</th><th>Кол-во</th><th>Сумма</th><th></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>

    <div style="margin-top:8px;">
      <input id="promoCode" placeholder="Промокод (SAVE10)">
      <button id="applyPromo">Применить</button>
      <span id="promoMsg" class="muted"></span>
    </div>

    <div class="totals">
      <div>Подытог: <strong id="subtotal">0 ₽</strong></div>
      <div>Скидка: <strong id="discount">0 ₽</strong></div>
      <div>Доставка: <strong id="shipping">300 ₽</strong></div>
      <div style="font-size:18px">Итого: <strong id="total">300 ₽</strong></div>
    </div>

    <h2>Оформление заказа</h2>
    <form id="orderForm">
      <label>Имя<br><input id="name" required></label>
      <label>Email<br><input id="email" type="email" required></label>
      <label>Телефон (+7XXXXXXXXXX)<br><input id="phone" placeholder="+7XXXXXXXXXX" required></label>
      <button id="placeOrder">Оформить заказ</button>
    </form>
    <p id="orderMsg" class="muted"></p>
  </div>

  <script>
    const products = {
      1: { title: 'Фитнес-браслет', price: 1299 },
      2: { title: 'Беспроводные наушники', price: 2499 },
    };

    const state = { items: {}, promoApplied: 0 };
    const SHIPPING = 300, FREE_SHIP_TH = 3000;

    const fmt = n => n.toLocaleString('ru-RU') + ' ₽';
    const subtotal = () => Object.values(state.items).reduce((s, it)=> s + it.price * it.qty, 0);
    function calcShipping(sub){ return sub > FREE_SHIP_TH ? 0 : SHIPPING; }
    function total(){ return Math.max(0, subtotal() + calcShipping(subtotal()) - state.promoApplied); }

    function render(){
      const tb = document.querySelector('#cart tbody'); tb.innerHTML = '';
      Object.entries(state.items).forEach(([id, it])=>{
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${it.title}</td>
          <td>${fmt(it.price)}</td>
          <td><input class="qty" data-id="${id}" type="number" min="1" max="10" value="${it.qty}"></td>
          <td>${fmt(it.price*it.qty)}</td>
          <td><button class="remove" data-id="${id}">Удалить</button></td>`;
        tb.appendChild(tr);
      });

      document.querySelectorAll('.remove').forEach(b=>{
        const id = b.getAttribute('data-id');
        if(id !== '2'){
          b.onclick = ()=>{ delete state.items[id]; recalc(); };
        }
      });

      document.querySelectorAll('.qty').forEach(inp=>{
        inp.oninput = e=>{
          const id = e.target.getAttribute('data-id');
          state.items[id].qty = parseInt(e.target.value||'0',10);
          recalc();
        };
      });

      document.getElementById('subtotal').textContent = fmt(subtotal());
      document.getElementById('discount').textContent = fmt(state.promoApplied);
      document.getElementById('shipping').textContent = fmt(calcShipping(subtotal()));
      document.getElementById('total').textContent = fmt(total());
    }

    function recalc(){ render(); }

    function addToCart(id){
      const p = products[id];
      if(!state.items[id]) state.items[id] = {title:p.title, price:p.price, qty:1};
      else state.items[id].qty++;
      recalc();
    }

    function applyPromo(code){
      const msg = document.getElementById('promoMsg');
      if(code === 'SAVE10'){
        state.promoApplied += Math.round(total() * 0.10);
        msg.textContent = `Промокод применён (−${fmt(state.promoApplied)})`;
      } else {
        msg.textContent = 'Неизвестный промокод';
      }
      recalc();
    }

    // Привязки — скрипт находится в конце <body>, поэтому элементы уже существуют
    document.querySelectorAll('.product .add').forEach(b=>{
      b.onclick = e => addToCart(e.target.closest('.product').getAttribute('data-id'));
    });
    document.getElementById('applyPromo').onclick = ()=> applyPromo(document.getElementById('promoCode').value.trim());
    document.getElementById('orderForm').onsubmit = e=>{
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const phoneOk = phone.startsWith('+7') && phone.length >= 8;

      if(!name || !email.includes('@') || !phoneOk){
        document.getElementById('orderMsg').textContent='Проверьте данные';
        return;
      }
      if(subtotal()<=0){
        document.getElementById('orderMsg').textContent='Корзина пуста';
        return;
      }
      document.getElementById('orderMsg').textContent='Заказ оформлен!';
    };

    // Первичный рендер
    recalc();
  </script>
</body>
</html>
